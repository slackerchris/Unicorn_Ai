# Environment Configuration
# Copy this to .env and customize

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Ollama Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=dolphin-mistral
OLLAMA_TEMPERATURE=0.8
OLLAMA_MAX_TOKENS=500

# Persona Settings
DEFAULT_PERSONA=default
PERSONA_NAME=Luna
PERSONA_DESCRIPTION=Your friendly, caring AI companion

# Database
DATABASE_URL=sqlite+aiosqlite:///data/conversations.db

# Future: Telegram Bot
# TELEGRAM_BOT_TOKEN=your_bot_token_here

# Future: Google Calendar
# GOOGLE_CALENDAR_CREDENTIALS=config/google_credentials.json

# Image Generation
# Options: "auto", "comfyui", "replicate"
IMAGE_PROVIDER=auto

# Replicate (Cloud API - requires API token)
# Get token at: https://replicate.com/account/api-tokens
# REPLICATE_API_TOKEN=your_token_here
# REPLICATE_MODEL=stability-ai/sdxl

# ComfyUI (Local - free but requires setup)
COMFYUI_URL=http://localhost:8188
COMFYUI_WORKFLOW=workflows/character_generation.json
REFERENCE_IMAGE=reference_images/luna_face.png

# Future: TTS
# TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
